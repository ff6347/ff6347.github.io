<script>
	function calculateAge(birthday: Date) {
		// birthday is a date
		var ageDifMs = Date.now() - birthday.getTime();
		var ageDate = new Date(ageDifMs); // miliseconds from epoch
		return Math.abs(ageDate.getUTCFullYear() - 1970);
	}

	document.addEventListener("DOMContentLoaded", function (_event) {
		let age = calculateAge(new Date("1979-03-06T10:10:00"));
		console.log(
			"Hey. You are peaking into the console? Nice. But there is not a lot going on here. Just some minor JS fiddle to make the numbers go brooom on first load. But since you are here, have a secret link to some personal stuff: https://fabianmoronzirfas.me/personal/",
		);
		let ele = document.querySelector("span#calced-age");

		if (ele !== null) {
			let counter = 0;
			let interval = setInterval(() => {
				if (counter === age) {
					// ele.classList.remove('shake');
					clearInterval(interval);
				} else {
					counter++;
					ele.innerHTML = `${counter}`;
				}
			}, 23);
			// ele.innerHTML = age;
			// console.log(ele);
		}
	});
</script>
